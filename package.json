{
  "name": "@ciclismurban/api",
  "version": "1.1.1",
  "description": "",
  "author": "Evghenii Notarius",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chelovekgenek/ciclismurban-api"
  },
  "private": false,
  "scripts": {
    "start": "node dist/src/main.js",
    "watch": "nodemon -V",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "prepublishOnly": "yarn release && yarn build",
    "release": "standard-version",
    "test": "jest",
    "test:watch": "jest --watch",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/ormconfig.ts",
    "migration:create": "yarn run typeorm migration:create -- -n",
    "migration:migrate": "yarn run typeorm migration:generate -- -n",
    "migration:revert": "yarn run typeorm migration:revert",
    "migration:run": "yarn run typeorm migration:run"
  },
  "dependencies": {
    "@moebius/http-graceful-shutdown": "^1.1.0",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/microservices": "^6.5.3",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^6.1.2",
    "@types/aws-sdk": "^2.7.0",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^24.0.20",
    "@types/lodash": "^4.14.136",
    "@types/module-alias": "^2.0.0",
    "@types/multer": "^1.3.7",
    "@types/node": "^10.12.18",
    "@types/passport-jwt": "^3.0.1",
    "amqp-connection-manager": "^3.0.0",
    "amqplib": "^0.5.5",
    "aws-sdk": "^2.504.0",
    "bcrypt": "^3.0.6",
    "chalk": "^2.4.2",
    "class-transformer": "^0.2.3",
    "class-transformer-validator": "^0.7.1",
    "class-validator": "^0.9.1",
    "dotenv": "^8.0.0",
    "dotenv-safe": "^6.1.0",
    "jest": "^24.9.0",
    "lodash": "^4.17.15",
    "module-alias": "^2.2.1",
    "mongodb": "^3.2.7",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.3",
    "rxjs": "^6.3.3",
    "swagger-ui-express": "^4.0.7",
    "ts-jest": "^24.1.0",
    "ts-node": "8.1.0",
    "tsconfig-paths": "^3.8.0",
    "typeorm": "^0.2.18",
    "typescript": "^3.5.3",
    "url-join": "^4.0.0",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "husky": "^2.4.1",
    "lint-staged": "^8.2.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.15.3",
    "standard-version": "^7.0.0",
    "ts-loader": "^6.0.4",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0"
  },
  "lint-staged": {
    "*.{ts}": [
      "tslint -p tsconfig.json",
      "prettier --write",
      "yarn test",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test",
      "pre-push": "yarn test"
    }
  },
  "standard-version": {
    "skip": {
      "changelog": true
    }
  }
}
